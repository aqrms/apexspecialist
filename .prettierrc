{
    "plugins": ["prettier-plugin-apex"],
    "trailingComma": "none",
    "overrides": [
        {
            "files": "**/lwc/**/*.html",
            "options": { "parser": "lwc" }
        },
        {
            "files": "*.{cmp,page,component}",
            "options": { "parser": "html" }
        },
        {
            "files": "**/*.{trigger.cls}",
            "options": { "parser": "apex" }
        }
    ],
    "semi": true,
    "tabWidth": 4,
    "printWidth": 120
}